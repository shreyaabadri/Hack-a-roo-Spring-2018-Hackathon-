<div class="row">
  <div class="col-md-offset-3 col-md-6 auth-form">
    <h3>Edit Profile</h3>
    <%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, id: :user_name, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :reg_number %>
      <%= form.number_field :reg_number, id: :user_reg_number, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :phone %>
      <%= form.number_field :phone, id: :user_phone, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :year_of_adm %>
      <%= form.select(:year_of_adm, options_for_select( [2015, 2016, 2017, 2018, 2019, 2020], Time.now.year ),{ :include_blank => '-- Select One --' }, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= form.label :department_id %>
      <%= form.select(:department_id, options_for_select( Department.all.map{|x| [x.name, x.id]}, user.department_id ),{ :include_blank => '-- Select One --' }, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= form.submit "Submit", :class => 'btn btn-default'%>
    </div>
    <% end %>